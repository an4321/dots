#!/bin/env fish
source "$HOME/dots/bin/helper/std.fish"

if checkcmd "apt"
	sudo apt install -y ufw
else if checkcmd "pacman"
	sudo pacman -S ufw
else
	die "unsupported distribution"
end

sudo tlp start

echo -e "\nSTART_CHARGE_THRESH_BAT0=70\nSTOP_CHARGE_THRESH_BAT0=90" \
	| sudo tee -a /etc/tlp.conf
sudo systemctl restart tlp
