#!/bin/env bash

# Associative Array
declare -A apps=(
    ["Neovim"]="nvim"
    ["HTOP"]="htop"
    ["FIREFOX"]="exec firefox"
    ["lf"]="lf"
)

# Get the list of keys (app names) and use fzf to select one
selected=$(printf "%s\n" "${!apps[@]}" | fzf)

# Automatically select the option if only one remains
if [[ -n "$selected" ]]; then
    command="${apps[$selected]}"
    eval $command
fi
