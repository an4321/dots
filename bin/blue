#!/bin/bash

device=$(bluetoothctl devices | tac | tofi | grep -o -E '([0-9a-fA-F]{2}:){5}[0-9a-fA-F]{2}')

if [ -n "$device" ]; then
    if bluetoothctl info | grep -q $device; then
        bluetoothctl disconnect "$device"
    else
        bluetoothctl connect "$device"
    fi
else
    echo "No device found."
fi

