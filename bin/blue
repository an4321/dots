#!/bin/env bash

device=$(bluetoothctl devices | grep Device | tac | menu | awk '{print $2}')
[ -z "$device" ] && exit

if bluetoothctl info | grep -q $device; then
	bluetoothctl disconnect "$device" && notify-send "disconnected"
else
	if bluetoothctl connect "$device"; then
		notify-send "connected"
	else
		notify-send "error connecting!"
	fi
fi
