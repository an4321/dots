#!/bin/bash

# Suspend after 3 Min
# swayidle timeout 180 'bash ~/Bin/lock'

# Define the options
options="Shutdown\nSuspend\nReboot\nLogout\nLock"

# Use Rofi to present the menu and get the user's choice
choice=$(echo -e $options | tofi )

# Perform the chosen action
case $choice in
    "Lock")
        bash ~/Bin/lock
        ;;
    "Logout")
        hyprctl dispatch exit 1
        ;;
    "Reboot")
        systemctl reboot
        ;;
    "Shutdown")
        systemctl poweroff
        ;;
    "Suspend")
        bash ~/Bin/lock && systemctl suspend
        ;;
esac
