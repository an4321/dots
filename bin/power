#!/bin/env bash

# Suspend after 3 Min
# swayidle timeout 180 'bash ~/Dots/bin/lock'

# Define the options
options="Shutdown\nReboot\nLogout\nLock"

# Use Rofi to present the menu and get the user's choice
choice=$(echo -e $options | (tofi 2>/dev/null || dmenu -i ))

# Perform the chosen action
case $choice in
    "Lock")
        bash ~/Dots/bin/lock
        ;;
    "Logout")
        hyprctl dispatch exit 1
        ;;
    "Reboot")
        systemctl reboot
        ;;
    "Shutdown")
        systemctl poweroff
        ;;
esac
