#!/bin/env sh

$HOME/dots/bin/setbg -r

battery="/sys/class/power_supply/BAT0"
[ ! -d "$battery" ] && battery=""

while true; do
	[ $battery ] && {
		cap=$(cat $battery/capacity)
		[ $cap -lt 15 ] && notify-send "ü™´ low battery"
		BATTERY=" Û±êã $cap% "
	}
	DATE=" $(date +"Û∞•î %H:%M  Û∞≠® %a %-d %b") "
	xsetroot -name "$BATTERY$DATE"
	sleep 60
done &

copyq &
picom --config ~/.config/dwm/lib/picom.conf &
dunst -conf ~/.config/dwm/lib/dunstrc &
