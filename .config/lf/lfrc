set shell fish
set scrolloff 10

set cursorpreviewfmt "\033[7;1m"
set previewer "~/.config/lf/preview"
set ignorecase true

cmd open &{{
    case $(file --mime-type -Lb $f) in
        text/*) lf -remote "send $id \$$EDITOR \$fx";;
        *) for f in $fx; do open $f & done;;
    esac
}}

map ` !true
map <enter> &open $f
map o &open $f
map i $fish
map I $thunar
map . set hidden!
map n :push %touch<space>
map m :push %mkdir<space>
map E $sudoedit $f

# map a :push $
map D ${{trash $fx}}

map gh cd ~/Desktop
map gd cd ~/Downloads
map gD cd ~/Documents
map gp cd ~/Pictures
map gs cd ~/Pictures/Screenshots
map g. cd ~/Dots/.config
map gv cd ~/Videos
map gm cd ~/Music

