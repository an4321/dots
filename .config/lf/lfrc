set shell fish
set scrolloff 10
set ignorecase true
set previewer "~/.config/lf/preview"

map ga cd ~/Desktop
map gd cd ~/Downloads
map gD cd ~/Documents
map gp cd ~/Pictures
map gs cd ~/Pictures/Screenshots
map gv cd ~/Videos
map gm cd ~/Music
map gn cd ~/notes
map g. cd ~/dots/.config
map g, cd ~/.config

map J :push 5j
map K :push 5k
map i $$SHELL
map I :&[ -n "$TMUX" ] && tmux new-window || kitty
map t $thunar
map <a-a> !t $PWD
map <backtab> $yazi
map . set hidden!
map <tab> !true
map x :cut
map ; :push &
map n :push %touch<space>
map m :push %mkdir<space>
map o :&{{ xdg-open "$f" }}
map E $sudoedit $f
# v to invert select

map a ${{
    set result $(find . -type f -o -type d | fzf)
    lf -remote "send $id select '$result'"
}}

map z ${{ 
    set result "$(zoxide query -i)" 
    lf -remote "send $id cd '$result'"
}}

map d %{{
    echo " Confirm (y/n): "
    read response
    if test "$response" = "y" -o "$response" = "o"
        for file in (echo $fx)
            trash $file
        end
        echo "done"
    else
        echo "exited"
    end
}}

cmd on-redraw %{{
    if test $lf_width -le 100
        lf -remote "send $id set ratios 1:2"
    else
        lf -remote "send $id set ratios 1:2:3"
    end
}}
