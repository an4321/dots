set shell bash
set scrolloff 10
set ignorecase true
set cursorpreviewfmt "\033[7;1m"
set previewer "~/.config/lf/preview"
set sixel true

map ga cd ~/Desktop
map gd cd ~/Downloads
map gD cd ~/Documents
map gp cd ~/Pictures
map gs cd ~/Pictures/Screenshots
map gv cd ~/Videos
map gm cd ~/Music
map gn cd ~/Notes
map g. cd ~/Dots/.config

map i $fish
map I $thunar
map <tab> !true
map . set hidden!
map x :cut
map o :&{{ xdg-open "$f" }}
map E $sudoedit $f
map n :push %touch<space>
map m :push %mkdir<space>
map ; :push !

map z ${{ result="$(zoxide query -i)" && lf -remote "send $id cd '$result'" }}
map d %{{ echo " Confirm (y/n): " && read response && [[ "$response" =~ ^[Yyo] ]] && trash $fx && echo done || echo exited }}

cmd on-redraw %{{
    if [ $lf_width -le 100 ]; then
        lf -remote "send $id set ratios 1:2"
    else
        lf -remote "send $id set ratios 1:2:3"
    fi
}}
